{
	"compilerOptions": {
		"lib": [
			"ES2020.Promise",
			"ESNext"
		],
		"module": "CommonJS",
		"target": "ESNext",
		"outDir": "dist",
		"sourceMap": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"declaration": true,
		"allowJs": true,
		"strictNullChecks": true,
		"resolveJsonModule": true,
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src"
	]
}
